<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:ViewModel="clr-namespace:WowFisher.Wpf.ViewModel" x:Class="WowFisher.Wpf.View.MainWindow"
        mc:Ignorable="d"
        Title="MainWindow" Height="225" Width="400">
    <Grid>
        <Grid.DataContext>
            <ViewModel:MainViewModel/>
        </Grid.DataContext>
        <Image x:Name="image" HorizontalAlignment="Left"  VerticalAlignment="Top"  Source="{Binding ImageSource, Mode=OneWay}"/>
        <Button Content="Button" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Click="Button_Click"/>
        <Button x:Name="button" Content="Button" HorizontalAlignment="Left" Margin="58,10,0,0" VerticalAlignment="Top" Click="Button_Click_1"/>
        <Button Content="Button" HorizontalAlignment="Left" Margin="106,10,0,0" VerticalAlignment="Top" Command="{Binding StartAsyncCommand, Mode=OneWay}"/>
        <Button Content="Button" HorizontalAlignment="Left" Margin="157,10,0,0" VerticalAlignment="Top" Command="{Binding StartAsyncCommand.CancelCommand, Mode=OneWay}" />
    </Grid>
</Window>
